{
  "extends": "airbnb",
  "plugins": [
    "jest"
  ],
  "env": {
    "browser": true,
    "jest/globals": true
  },
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "**/*.test.js",
          "**/setupTests.js"
        ]
      }
    ],
    "no-console": "off",
    "react/jsx-filename-extension": "off"
  }
}
